@import "../../styles/mixins.pcss";
@import "../../styles/variables.pcss";

.card {
  @mixin position-center;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 12px;
  background: #fff;
  box-shadow: 0 0 6px 0 rgba(0, 0, 0, 0.14);
  padding: 24px;
  width: 20rem;

  &__heading {
    margin-bottom: 1rem;
  }
}
