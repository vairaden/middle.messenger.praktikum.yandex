.settings {
  width: 30rem;
  margin: 2rem auto 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;

  &__avatar {
    margin-bottom: 1rem;
  }

  &__form {
    width: 100%;
    list-style-type: none;
    display: flex;
    flex-direction: column;

    button {
      width: 20rem;
      margin: 2rem auto;
    }

    h2 {
      font-size: 16px;
      margin-top: 2rem;
    }
  }
}
