<div class="page-wrapper">
  {{{ Link }}}
  <main class="profile">
    <img class="profile__avatar" src="{{#if
      avatar}}https://ya-praktikum.tech/api/v2/resources{{avatar}}{{else}}/avatar.png{{/if}}"
         alt="Avatar"/>
    <h1 class="profile__login">{{ userLogin }}</h1>
    <ul class="profile__section">
      {{# each ProfileItems}}
        {{{this}}}
      {{/each}}
    </ul>
    <nav class="profile__nav">
      <ul class="profile__section">
        <li>
          {{{ SettingsLink }}}
        </li>
        <li>
          {{{ ExitLink }}}
        </li>
      </ul>
    </nav>
  </main>
</div>
