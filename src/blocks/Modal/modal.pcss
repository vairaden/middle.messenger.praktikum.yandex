.modal {
  &__background {
    position: absolute;
    left: 0;
    top: 0;
    background-color: rgba(0, 0, 0, 0.2);
    height: 100vh;
    width: 100vw;
  }

  &__card {
    width: fit-content;
    padding: 1rem;
    border-radius: 16px;
    position: relative;
    background-color: white;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
  }
}

.hidden {
  display: none;
}
