{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": false,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
  },
  "files": [
    "src/server.cts"
  ]
}
